<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>CiviCRM Events Listing</name>
	<author>Nakul Ganesh, modifications by Brian Shaughnessy</author>
	<creationDate>July 2009</creationDate>
	<copyright>Copyright (C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>nakul.ganesh@joomla.community.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>2.0.2</version>
	<description>Displays upcoming events configured in CiviCRM in a list format. The module may be used multiple times on a page. Also note that the module retrieves all custom data associated with the event and passes it to the module template file (tmpl/default.php) -- however it does not display it. You should modify the module template file (which can be done via an override in your main Joomla template folder) to insert those additional fields as desired.</description>
	<files>
		<filename module="mod_civievent">mod_civievent.php</filename>
		<filename module="mod_civievent">/tmpl/default.php</filename>
		<filename module="mod_civievent">/tmpl/index.html</filename>
		<filename module="mod_civievent">/elements/eventlist.php</filename>
		<filename module="mod_civievent">/elements/index.html</filename>
		<filename module="mod_civievent">helper.php</filename>
		<filename module="mod_civievent">civievent.css</filename>
	</files>
	 <params addpath="/modules/mod_civievent/elements">
		
		<param type="spacer" default="&lt;b&gt;Choose how events will be selected&lt;/b&gt;" />
		
		<param name="mode" type="radio" default="0" label="Mode" description="Choose event selection method">
			<option value="0">Default</option>
			<option value="1">Date Range</option>
			<option value="2">Custom Select</option>
			<option value="3">Event Type</option>
	  	</param>
		
		<param type="spacer" />
	  	
		<param name="privacy" type="radio" default="0" label="Privacy" description="Select Public or Private Events">
			<option value="0">Both</option>
			<option value="1">Public</option>
			<option value="2">Private</option>
		</param>

		<param name="link" type="list" default="0" label="Link Destination" description="Link Destination Page">
			<option value="0">Event Information Page</option>
			<option value="1">Event Registration Page</option>
			<option value="2">Event Information Page with Register Link</option>
	  	</param>
		
	  	<param name="modal" type="radio" default="0" label="Modal" description="Select Modal Link or Normal Link">
			<option value="0">Yes</option>
			<option value="1">No</option>
		</param>
		
		<param name="maxevents" type="text" default="10" size="10" label="Events Listed" description="Maximum number of events to be listed."></param>
		
		<param name="showdates" type="radio" default="1" label="Show Dates?" description="Indicate if you want the event dates listed.">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
		<param name="dateformat" type="text" default="%m/%d/%Y" size="20" label="Date Format" description="Date display in strftime format"></param>
	    
		<param name="summary" type="radio" default="1" label="Display Summary Text?" description="Do you want to include event summary text with the listing?">
			<option value="0">Yes</option>
			<option value="1">No</option>
		</param>
		
		<param type="spacer" />
		<param type="spacer" default="&lt;b&gt;Sort Options&lt;/b&gt;" />
		
		<param name="sort" type="radio" default="0" label="Sort By" description="Select Sorting options">
			<option value="0">Title</option>
			<option value="1">Start Date</option>
			<option value="2">End Date</option>
		</param>
		
		<param name="sortop" type="radio" default="0" label="Sort Method" description="Select Sorting options">
			<option value="ASC">Ascending</option>
			<option value="DESC">Descending</option>
		</param>
		
		<param type="spacer" />
		
		<param type="spacer" default="&lt;b&gt;Mode: Date Range Options&lt;/b&gt;" />
		
	  	<param name="startdate" type="calendar" default="Select" label="Start date" description="" format="%d-%m-%Y" />
	  	<param name="enddate" type="calendar" default="Select" label="End date" description="" format="%d-%m-%Y" />
	
		<param type="spacer" default="&lt;b&gt;Mode: Custom Event Selection Options&lt;/b&gt;" /> 
	
	 	<param name="multievent" type="eventlist" default="0" label="Select Events" description="Select Events to be displayed"/> 
	
		<param type="spacer" default="&lt;b&gt;Mode: Event Type Options&lt;/b&gt;" />
	
		<param name="tid" type="sql" default="10" label="Display" query="
			SELECT civicrm_option_value.value, civicrm_option_value.label
  			FROM civicrm_option_value
       		INNER JOIN
          		civicrm_option_group
       		ON (civicrm_option_value.option_group_id = civicrm_option_group.id)
 			WHERE (civicrm_option_group.name = 'event_type')" 
			key_field="value" value_field="label" />
	
	</params> 
	
</install>